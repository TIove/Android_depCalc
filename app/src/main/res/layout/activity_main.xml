<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.igorok.myapplication.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/editText12"
            android:layout_width="75dp"
            android:layout_height="39dp"
            android:layout_alignLeft="@+id/editText11"
            android:layout_alignStart="@+id/editText11"
            android:layout_alignTop="@+id/textView7"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="75dp"
            android:layout_height="39dp"
            android:layout_above="@+id/seekBar"
            android:layout_alignEnd="@+id/seekBar"
            android:layout_alignRight="@+id/seekBar"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignLeft="@+id/switch2"
            android:layout_alignStart="@+id/switch2"
            android:layout_below="@+id/seekBar"
            android:layout_marginTop="8dp"
            android:text="Ставка"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="76dp" />

        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="292dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/editText12"
            android:layout_alignRight="@+id/editText12"
            android:layout_below="@+id/editText12"
            android:layout_marginTop="8dp"
            android:max="20"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="96dp"
            android:layout_height="39dp"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="7dp"
            android:text="Сумма"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="76dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/seekBar4"
            android:layout_marginTop="11dp"
            android:text="Срок"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="76dp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="292dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:max="1095"
            android:progress="10"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="113dp" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_below="@+id/seekBar3"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:text="Капитализация "
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar4"
            android:layout_width="292dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/editText11"
            android:layout_alignRight="@+id/editText11"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="15dp"
            android:max="2000000"
            android:progress="20000" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="75dp"
            android:layout_height="39dp"
            android:layout_above="@+id/seekBar4"
            android:layout_alignEnd="@+id/seekBar4"
            android:layout_alignRight="@+id/seekBar4"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/switch2"
            android:layout_alignStart="@+id/switch2"
            android:layout_below="@+id/switch2"
            android:layout_marginTop="21dp"
            android:text="Дата открытия"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText13"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignEnd="@+id/seekBar3"
            android:layout_alignRight="@+id/seekBar3"
            android:ems="10"
            android:inputType="date" />

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:text="Рассчитать" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="17dp"
            android:text="Всего процентов"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignEnd="@+id/button"
            android:layout_alignRight="@+id/button"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText13"
            android:layout_alignStart="@+id/editText13"
            android:layout_below="@+id/editText13"
            android:layout_marginTop="37dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:text="Вид выплат"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:text=" (%годовых)"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:text="(дней)"
            android:textSize="18sp"
            android:textStyle="italic" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
